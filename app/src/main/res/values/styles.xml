<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="alter_button_custom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/green_light</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/alter_button_selected_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingHorizontal" tools:targetApi="o">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:text">@string/button_item_default</item>
    </style>


    <style name="flowTextView" parent="Widget.AppCompat.TextView">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white_approx</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:background">@color/grey_heavy</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="button_linear_horizontal" parent="TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/white_approx</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>